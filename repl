#!/bin/bash

show_help()
{
# shellcheck disable=SC2006
  cat <<EOF

$ExecName version $Version

Usage:
 $ExecName [options] <dest_resc>

replicates data objects

Parameters:
 <dest_resc>  the resource where the files will be replicated

Options:
 -A, --age <age>                how many days old a data object must be to be
                                replicated, default: 1
 -c, --collection <collection>  only replicate the data objects in this
                                collection
 -H, --host <host>              connect to the ICAT's DBMS on the host <host>
                                instead of the PostgreSQL default
 -m, --multiplier <multiplier>  a multiplier on the number of processes to run
                                at once, default: 1
 -P, --port <port>              connect to the ICAT's DBMS listening on TCP port
                                <port> instead of the PostgreSQL default
 -r, --resource <resource>      only replicate the data objects with a file on
                                this resource
 -s, --serial                   disable parallel transport
 -u, --until <stop_time>        the time to stop replication in a format
                                understandable by `date`
 -U, --user <user>              authorize the DBMS connection as user <user>
                                instead of the default

 -h, --help     show help and exit
 -v, --verison  show version and exit

Summary:
This program replicates data objects that were created before yesterday. It only
replicates objects to the <dest_resc> if a replica doesn't already exist there.
It writes progress to standard error and all messages, error or otherwise, to
standard out.

Prerequisites:
 1) The user must be initialized with iRODS as an admin user.
 2) The user must be able to connect to the ICAT DB without providing a
    password.
EOF
}


set -o nounset

export SERIAL=
export UNTIL_TS=

readonly ExecName=$(basename "$0")
readonly Version=2
readonly Log=3

ProcMult=1


main()
{
  Age=1

  readonly Opts=$( \
    getopt \
      --name "$ExecName" \
      --longoptions \
        age:,collection:,help,host:,multiplier:,port:,resource:,serial,until:,user:,version \
      --options A:c:hH:m:P:r:su:U:v \
      -- \
      "$@")
  ret="$?"
  if [ "$ret" -ne 0 ]
  then
    exit_with_help
  fi

  eval set -- "$Opts"

  BaseColl=
  SrcRes=
  Until=

  while true
  do
    case "$1" in
      -A|--age)
        Age="$2"
        shift 2
        ;;
      -c|--collection)
        BaseColl="$2"
        shift 2
        ;;
      -h|--help)
        show_help
        exit 0
        ;;
      -H|--host)
        export PGHOST="$2"
        shift 2
        ;;
      -m|--multiplier)
        ProcMult="$2"
        shift 2
        ;;
      -P|--port)
        export PGPORT="$2"
        shift 2
        ;;
      -r|--resource)
        SrcRes="$2"
        shift 2
        ;;
      -s|--serial)
        SERIAL=true
        shift
        ;;
      -u|--until)
        Until="$2"
        shift 2
        ;;
      -U|--user)
        export PGUSER="$2"
        shift 2
        ;;
      -v|--version)
        show_version
        exit 0
        ;;
      --)
        shift
        break
        ;;
      *)
        exit_with_help
        ;;
    esac
  done

  if [ "$#" -lt 1 ]
  then
    exit_with_help
  fi

  export DEST_RESC="$1"

  if [ -n "$ProcMult" ]
  then
    if ! [[ "$ProcMult" =~ ^[1-9][0-9]* ]]
    then
      printf \
          'The -m option value must be a positive number. The given value was %s.\n' \
          "$ProcMult" \
        >&2
      exit 1
    fi
  fi

  if [ -n "$Until" ]
  then
    if ! UNTIL_TS=$(date --date="$Until" '+%s')
    then
      printf '%s is not a valid date format\n' "$Until"
      exit 1
    fi
  fi

  # Redirect stdout to FD 3 to use as a logging channel
  eval "exec $Log>&1"

  readonly ObjectList=$(mktemp)

  trap 'finish "$ObjectList"' EXIT

  if ! iadmin lz &> /dev/null
  then
    printf "aren't authenticated as a rodsadmin user\n" >&2
    exit 1
  fi

  if ! psql ICAT <<<'' &> /dev/null
  then
    printf "aren't able to connect to the ICAT DB without a password\n" >&2
    exit 1
  fi

  if ! CHECK_TIME
  then
   printf 'Stop time is in the past\n' >&2
   exit 1
  fi

  printf 'Retrieving data objects to replicate...\n' >&2

  readonly MaxCreateDate=$(date --iso-8601 --date "$Age days ago")
  readonly MaxCreateTime=$(date --date "$MaxCreateDate" '+%s')

  if [ -n "$SrcRes" ]
  then
    readonly ResCond="d.resc_name = '$SrcRes'"
  else
    readonly ResCond="d.resc_name != '$DEST_RESC'"
  fi

  if [ -n "$BaseColl" ]
  then
    readonly BaseCond="c.coll_name = '$BaseColl' OR c.coll_name LIKE '$BaseColl/%'"
  else
    readonly BaseCond=TRUE
  fi

  readonly ReplQuery=$(mk_repl_query "$MaxCreateTime" "$BaseCond" "$ResCond")

  psql \
      --no-align --tuples-only --record-separator-zero \
      --command "$ReplQuery" --field-separator ' ' \
      ICAT \
    > "$ObjectList"

  readonly Tot=$(count < "$ObjectList")
  printf '%d data objects to replicate\n' "$Tot" >&2

  if [ "$Tot" -gt 0 ]
  then
    if [ -z "$SERIAL" ]
    then
      cnt=0
      cnt=$(select_cohort "$cnt" "$Tot"  1   2 15    < "$ObjectList")  # 1 16-threaded
      cnt=$(select_cohort "$cnt" "$Tot"  2   8  7 15 < "$ObjectList")  # 2 8--15-threaded
      cnt=$(select_cohort "$cnt" "$Tot"  3  18  5  7 < "$ObjectList")  # 3 6--7-threaded
      cnt=$(select_cohort "$cnt" "$Tot"  4  32  3  5 < "$ObjectList")  # 4 4--5-threaded
      cnt=$(select_cohort "$cnt" "$Tot"  6  72  2  3 < "$ObjectList")  # 6 3-threaded
      cnt=$(select_cohort "$cnt" "$Tot"  8 128  1  2 < "$ObjectList")  # 8 2-threaded
      cnt=$(select_cohort "$cnt" "$Tot" 16 512  0  1 < "$ObjectList")  # 16 1-threaded transfers
    else
      select_cohort 0 "$Tot" 16 2 0 < "$ObjectList" > /dev/null
    fi
  fi
}


show_version()
{
  printf '%s\n' "$Version"
}


exit_with_help()
{
  show_help >&2
  exit 1
}


CHECK_TIME()
{
  if [ -n "$UNTIL_TS" ] && [ "$(date '+%s')" -ge "$UNTIL_TS" ]
  then
    return 1
  fi
}
export -f CHECK_TIME


REPL_BATCH()
{
  if ! CHECK_TIME
  then
    exit 1
  fi

  local maxThreads=16

  if [ "$SERIAL" ]
  then
    maxThreads=0
  fi

  irepl -B -M -T -v -N "$maxThreads" -R "$DEST_RESC" "$@"

# XXX: Trying to figure out the irepl error code for when irepl logs a
# '_rcConnect: connectToRhost error, server on data.cyverse.org:1247 is probably
# down status = -305113 USER_SOCK_CONNECT_ERR, No route to host' error message.
# It is probably at 113, but we should confirm.
# TODO: Once this is confirmed, if this status is returned, this function should
# wait for a bit and try again.
  local replStatus="$?"
  if [ "$replStatus" -ne 0 ]
  then
    printf 'repl: irepl exited with status %d\n' "$replStatus" >&2
  fi

  exit 0
}
export -f REPL_BATCH


finish()
{
  local objList="$1"

  if ! CHECK_TIME
  then
    printf 'out of time\n' >&2
  fi

  rm --force "$objList"
  eval "exec 1>&$Log $Log>&-"
}


count()
{
  awk 'BEGIN {
         RS = "\0"
         tot = 0
       }

       { tot = tot + 1 }

       END { print tot }'
}


partition()
{
  local minSizeB="$1"

  local maxSizeB=
  if [ "$#" -ge 2 ]
  then
    maxSizeB="$2"
  fi

  if [ -n "$maxSizeB" ]
  then
    awk --assign min="$minSizeB" --assign max="$maxSizeB" \
        'BEGIN {
           RS = "\0"
           FS = " "
           ORS = "\0"
         }

         {
           if ($1 >= min && $1 < max) { print substr($0, length($1) + 2) }
         }'
  else
    awk --assign min="$minSizeB" \
        'BEGIN {
           RS = "\0"
           FS = " "
           ORS = "\0"
         }

         {
           if ($1 >= min) { print substr($0, length($1) + 2) }
         }'
  fi
}


mk_prog_msg()
{
  local count="$1"
  local total="$2"
  local subCount="$3"
  local subTotal="$4"

  printf 'cohort: %0*d/%d, all: %0*d/%d' \
         ${#subTotal} "$subCount" "$subTotal" ${#total} "$count" "$total"
}


mk_repl_query()
{
  local maxTime="$1"
  local baseCond="$2"
  local resCond="$3"

  cat <<EOSQL
SELECT d.data_size, c.coll_name || '/' || d.data_name
FROM r_data_main AS d JOIN r_coll_main AS c ON c.coll_id = d.coll_id
WHERE d.data_id = ANY(ARRAY(SELECT data_id FROM r_data_main GROUP BY data_id HAVING COUNT(*) = 1))
  AND d.create_ts < '0$maxTime'
  AND ($baseCond)
  AND ($resCond)
EOSQL
}


track_prog()
{
  local cnt="$1"
  local tot="$2"
  local subTot="$3"

  local subCnt=0

  local msg
  msg=$(mk_prog_msg "$cnt" "$tot" "$subCnt" "$subTot")

  printf '%s' "$msg" >&2

  while read -r
  do
    if [[ "$REPLY" != 'cliReconnManager: '* ]]
    then
      ((subCnt++))
      ((cnt++))
      printf '\r%*s\r' ${#msg} '' >&2
      msg=$(mk_prog_msg "$cnt" "$tot" "$subCnt" "$subTot")
      printf '%s' "$msg" >&2
    fi
  done

  printf '\r%*s\r' ${#msg} '' >&2
  msg=$(mk_prog_msg "$cnt" "$tot" "$subCnt" "$subTot")
  printf '%s\n' "$msg" >&2
  printf '%s' "$cnt"
}


select_cohort()
{
  local cnt="$1"
  local tot="$2"
  local maxProcs="$3"
  local maxArgs="$4"
  local minThreads="$5"

  local maxThreads=
  if [ "$#" -ge 6 ]
  then
    maxThreads="$6"
  fi

  if ! CHECK_TIME
  then
    exit 0
  fi

  local minSizeMiB=$((minThreads * 32))
  local minSizeB=$((minSizeMiB * 1024 ** 2))

  local cohortList
  cohortList=$(mktemp)

  local maxSizeMiB=
  if [ -n "$maxThreads" ]
  then
    maxSizeMiB=$((maxThreads * 32))

    local maxSizeB=$((maxSizeMiB * ((1024 ** 2))))

    partition "$minSizeB" "$maxSizeB"
  else
    partition "$minSizeB"
  fi > "$cohortList"

  local subTotal
  subTotal=$(count <"$cohortList")

  if [ -n "$maxSizeMiB" ]
  then
    printf 'Replicating %s files with size in [%s, %s) MiB\n' \
           "$subTotal" "$minSizeMiB" "$maxSizeMiB" \
      >&2
  else
    printf 'Replicating %s files with size >= %s MiB\n' "$subTotal" "$minSizeMiB" >&2
  fi

  if [ "$subTotal" -gt 0 ]
  then
    maxProcs=$((maxProcs * ProcMult))

    parallel --no-notice --null --halt 2 --max-args "$maxArgs" --max-procs "$maxProcs" REPL_BATCH \
        < "$cohortList" \
        2>&"$Log" \
      | tee >(cat >&"$Log") \
      | track_prog "$cnt" "$tot" "$subTotal"
  else
    printf '%s\n' "$cnt"
  fi

  rm --force "$cohortList"
}


main "$@"
